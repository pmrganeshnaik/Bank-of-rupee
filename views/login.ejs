<%-include('partials/header.ejs') %>
<body>
    <div class="login-container d-flex align-items-center justify-content-center">
        <div class="background-pattern"></div>
        
        <div class="login-box">
            <!-- Banking Icon -->
            <div class="banking-icon mx-auto">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>

            <!-- Login Form -->
            <div class="text-center mb-4">
                <h1 class="login-title">Welcome Back</h1>
                <p class="welcome-text">Please enter your credentials to access your account</p>
            </div>

            <form action="/transactions" method="post">
                <div class="form-floating">
                    <input type="text" class="form-control" name="username" placeholder="Username">
                    <label for="username">Username</label>
                </div>

                <div class="form-floating">
                    <input type="password" class="form-control" name="password" placeholder="Password">
                    <label for="password">Password</label>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember">
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <a href="#" class="register-link">Forgot Password?</a>
                </div>

                    <input type="submit" value="Login" class="btn btn-primary login-btn w-100 mb-3"></input>

                <p class="text-center mb-0">
                    Don't have an account? 
                    <a href="#" class="register-link">Register Now</a>
                </p>
            </form>
        </div>
    </div>
</body>
</html>
<%-include('partials/footer.ejs') %>
